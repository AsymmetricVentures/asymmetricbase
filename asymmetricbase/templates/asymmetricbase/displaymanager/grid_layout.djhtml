{% macro display(obj) %}
	<table class='gridlayout-table'>
		{% for rownum, column_dict in obj.grid.items() %}
			<tr>
				{% for colnum, field in column_dict.items() %}
					<td class = '{{ rownum }} {{ colnum }}' colspan='{{ field.colspan }}' rowspan='{{ field.rowspan }}'>
						{{ field(obj.item) }}
					</td>
				{% endfor %}
			</tr>
		{% endfor %}
	</table>
{% endmacro %}

